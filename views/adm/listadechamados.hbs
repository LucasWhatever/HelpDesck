<div class="d-flex justify-content-center" role="main">
    <section class="bg-white p-3 w-50 rounded" style="box-shadow: 0px 5px 10px black">
        <section class="bg-dark p-3 rounded" style="box-shadow: 0px 5px 5px black">
            <h4 class="card text-center text-dark fw-bold bg-white p-3">Listagem De Chamados:</h4>
            <a class="btn btn-outline-danger fw-bold d-flex justify-content-center mt-4" data-bs-toggle="collapse"
                data-bs-target="#collapse1" aria-controls="collapse1" style="box-shadow: 0px 5px 5px black">
                Chamados em Espera: {{emespera}}
            </a>
            <section class="collapse mt-5" id="collapse1">
                {{#each listadechadosemespera}}
                <header class="card" style="border-radius: 5px 5px 0px 0px">
                    <p class="text-danger fw-bold mt-2 ms-2" style="font-size: 18px">Responsavel:
                        {{Nomedofuncionario}}</p>
                </header>
                <div class="d-flex flex-column p-2 mb-5 gap-4"
                    style="box-shadow: 0px 10px 20px black;background-color: rgb(185, 45, 45);border-radius: 0px 0px 5px 5px;">
                    <div class="d-flex flex-row justify-content-end me-3 ">
                        <img src="{{Foto.url}}" alt="imagem de chamado em espera"
                            class="card border border-dark  border-5  mt-2" width="500" height="400">
                    </div>
                    <ul class="card fw-bold bg-white p-2 " style="font-style: italic; list-style: none;">
                        <li class="ms-3">Titulo: {{Titulo}}</li>
                        <li class="ms-3 mt-2">Descrição: {{Descricao}}</li>
                        <li class="ms-3 mt-2">Tipo De Manutenção: {{Manutencao}}</li>
                        <li class="ms-3 mt-2">Destinatario: {{Destinatario}}</li>
                        <li class="ms-3 mt-2">Tempo Estimado: {{#formatDate Tempoestimado}}{{/formatDate}}</li>
                        <li class="ms-3 mt-2">Criador(a) Do Chamado: {{Criadordochamado}}</li>
                    </ul>
                </div>
                {{/each}}
            </section>

            <a class="btn btn-outline-warning fw-bold d-flex justify-content-center mt-4" data-bs-toggle="collapse"
                data-bs-target="#collapse2" aria-controls="collapse2" style="box-shadow: 0px 5px 5px black">
                Chamados em Processo: {{emprocesso}}
            </a>

            <div class="collapse mt-5" id="collapse2">
                {{#each listadechadosemeprocesso}}
                <header class="card" style="border-radius: 5px 5px 0px 0px">
                    <p class="fw-bold mt-2 ms-2" style="color: rgb(216, 194, 70);font-size: 18px">Responsavel:
                        {{Nomedofuncionario}}</p>
                </header>
                <ul class="d-flex flex-column p-2 mb-5 gap-4"
                    style="list-style: none;box-shadow: 0px 10px 20px black;background-color: rgb(255, 224, 51);border-radius: 0px 0px 5px 5px;">
                    <div class="d-flex flex-row justify-content-end me-3 ">
                        <img src="{{Foto.url}}" alt="imagem de chamado em processo"
                            class="card border border-dark  border-5  mt-2" width="500" height="400">
                    </div>
                    <div class="card fw-bold bg-white p-2 " style="font-style: italic">
                        <li class="ms-3">Titulo: {{Titulo}}</li>
                        <li class="ms-3 mt-2">Descrição: {{Descricao}}</li>
                        <li class="ms-3 mt-2">Tipo De Manutenção: {{Manutencao}}</li>
                        <li class="ms-3 mt-2">Destinatario: {{Destinatario}}</li>
                        <li class="ms-3 mt-2">Tempo Estimado: {{#formatDate Tempoestimado}}{{/formatDate}}</li>
                        <li class="ms-3 mt-2">Criador(a) Do Chamado: {{Criadordochamado}}</li>
                    </div>
                </ul>
                {{/each}}
            </div>
            {{#each listadechamadospesquisados}}
            <header class="mt-5 bg-white p-1" style="border-radius: 5px 5px 0px 0px">
                <p class="fw-bold mt-2" style="font-size: 18px">Responsavel:
                    {{Nomedofuncionario}}</p>
            </header>
            <div class="d-flex flex-column p-2 mb-5 gap-4"
                style="list-style: none;box-shadow: 0px 10px 20px black;background-color: #197687;border-radius: 0px 0px 5px 5px;">
                <div class="d-flex flex-row justify-content-end me-3 ">
                    <img src="{{Foto.url}}" alt="imagem de pesquisa" class="card border border-dark  border-5  mt-2"
                        width="500" height="400">
                </div>
                <ul class="card fw-bold bg-white p-2 " style="font-style: italic; list-style: none;">
                    <li class="ms-3">Titulo: {{Titulo}}</li>
                    <li class="ms-3 mt-2">Descrição: {{Descricao}}</li>
                    <li class="ms-3 mt-2">Tipo De Manutenção: {{Manutencao}}</li>
                    <li class="ms-3 mt-2 text-danger">Status: {{Status}}</li>
                    <li class="ms-3 mt-2 text-danger">Destinatario: {{Destinatario}}</li>
                    <li class="ms-3 mt-2 text-danger">Tempo Estimado: {{#formatDate Tempoestimado}}{{/formatDate}}</li>
                    <li class="ms-3 mt-2">Criador(a) Do Chamado: {{Criadordochamado}}</li>
                    <li class="d-flex flex-row justify-content-end" style="font-style: normal;">
                        <a href="/listadechamados" class="btn btn-outline-secondary">limpar Toda
                            Pesquisa</a>
                    </li>
                </ul>
            </div>
            </ul>
            {{/each}}
            <p class="text-center text-white fw-bold mt-5 me-5">Gostaria De Encontrar um Chamado ou Chamados em
                Especifio?</p>
            <form class="d-flex justify-content-center align-items-center  gap-2" action="/buscandolistagemdechamados/"
                method="get" enctype="multipart/form-data">
                <input class="form-control w-75 text-center" type="text" name="chamado"
                    placeholder="Digite um titulo, uma descrição, uma manutenção ou o status"
                    style="text-transform: lowercase" required>
                <button class="btn btn-outline-success fw-bold " type="submit">Pesquisar</button>
            </form>
            <p class="text-center text-white  fw-bold mt-5 ">Gostaria De Encontrar um Chamado ou Chamados em especifio pelo Tempo
                Estimado?</p>
            <form class="d-flex justify-content-center align-items-center  gap-2" action="/buscandolistagemdechamados/"
                method="get" enctype="multipart/form-data">
                <input class="form-control w-75 text-center" type="date" name="Data" placeholder="digite uma data"
                    required>
                <button class="btn btn-outline-success fw-bold" type="submit">Pesquisar</button>
            </form>
        </section>
    </section>
</div>